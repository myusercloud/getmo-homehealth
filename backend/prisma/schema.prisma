generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ----------------------
// MODELS
// ----------------------
//

model Equipment {
  id             String            @id @default(uuid())
  name           String
  slug           String            @unique
  description    String?
  price          Float
  stock          Int               @default(0)
  type           EquipmentType     @default(SALE)
  status         StockStatus       @default(IN_STOCK)
  specifications Json?
  categoryId     String?
  category       Category?         @relation(fields: [categoryId], references: [id])
  images         EquipmentImage[]
  created_at     DateTime          @default(now())
}

//
// MULTIPLE IMAGES
//
model EquipmentImage {
  id           String    @id @default(uuid())
  equipmentId  String
  url          String
  isPrimary    Boolean   @default(false)
  sortOrder    Int       @default(0)

  equipment    Equipment @relation(fields: [equipmentId], references: [id])

  created_at   DateTime  @default(now())
}

//
// OPTIONAL CATEGORY SYSTEM
//
model Category {
  id          String        @id @default(uuid())
  name        String
  slug        String        @unique
  equipments  Equipment[]

  created_at  DateTime      @default(now())
}

//
// USER MODEL (unchanged)
//
model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  role       String   @default("user")
  created_at DateTime @default(now())
}

//
// ENUMS
//
enum EquipmentType {
  SALE
  LEASE
  BOTH
}

enum StockStatus {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
}
